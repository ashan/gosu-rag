{
  "name": "gosu-chroma-rag",
  "version": "1.0.0",
  "description": "Production-grade RAG ingestion platform for Guidewire Gosu codebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "install": "prebuild-install || echo 'Prebuild not available, will use source'",
    "prepare": "npm run build",
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "ingest": "ts-node src/cli/index.ts ingest",
    "query": "ts-node src/cli/index.ts query",
    "inspect-chroma": "ts-node scripts/inspect-chroma.ts",
    "view-logs": "ts-node scripts/view-logs.ts",
    "extract-parse-errors": "ts-node scripts/extract-parse-errors.ts",
    "clean-cache": "rm -f .rag-cache.json ingestion.db ingestion-report-*.json && echo '✅ Cleaned: hash cache and logs (ChromaDB data preserved)'",
    "clean-all": "rm -f .rag-cache.json ingestion.db ingestion-report-*.json && rm -rf chroma_data/ && echo '✅ Cleaned: everything (run docker compose up -d before ingesting)'",
    "clean-ingest": "npm run clean-cache && npm run ingest",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "rag",
    "gosu",
    "guidewire",
    "chroma",
    "embeddings"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^11.5.0",
    "chromadb": "^1.8.1",
    "dotenv": "^16.4.5",
    "openai": "^4.71.0",
    "prebuild-install": "^7.1.2",
    "tree-sitter": "^0.22.0",
    "tree-sitter-gosu": "github:ashan/tree-sitter-gosu",
    "tree-sitter-gosu-template": "github:ashan/tree-sitter-gosu-template",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}